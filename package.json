{
	"scripts": {
		"lint": "eslint --fix ./",
		"publish-release": "rimraf ./node_modules && meteor publish && meteor npm i --only=dev",
		"pre-commit": "lint-staged",
		"prepare": "husky install"
	},
	"devDependencies": {
		"babel-eslint": "^10.1.0",
		"eslint": "^7.26.0",
		"eslint-config-standard": "^10.2.1",
		"eslint-import-resolver-meteor": "^0.4.0",
		"eslint-plugin-import": "^2.2.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.1.0",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"markdownlint-cli": "^0.27.1",
		"rimraf": "^3.0.2"
	},
	"eslintConfig": {
		"extends": [
			"standard"
		],
		"rules": {
			"semi": [
				2,
				"always"
			],
			"comma-dangle": [
				2,
				"always-multiline"
			]
		},
		"parser": "babel-eslint",
		"env": {
			"browser": true,
			"node": true,
			"es6": true
		},
		"settings": {
			"import/resolver": {
				"meteor": {
					"extensions": [
						".js"
					]
				}
			}
		}
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*.md": "markdownlint -f -c .markdownlint.json"
	}
}
